// Package declaration - this defines the package where this class belongs
package com.studentinfo;

// Importing necessary Spring Boot classes
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

// This annotation marks this class as the main entry point for the Spring Boot application.
// It enables auto-configuration, component scanning, and configuration support.
@SpringBootApplication
public class StudentinfoApplication {

	// The main() method - this is the starting point of the Java application.
	public static void main(String[] args) {
		// SpringApplication.run() launches the application.
		// It sets up the Spring application context and starts the embedded server (like Tomcat).
		SpringApplication.run(StudentinfoApplication.class, args);
	}
}

